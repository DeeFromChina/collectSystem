   public void open(Map<String, Object> map) {
      this.id = map.get("id").toString();
      this.map = map;
      createContents();
      load();
      shell.open();
      shell.layout();
      Display display = getParent().getDisplay();
      while (!shell.isDisposed()) {
         if (!display.readAndDispatch()) {
            display.sleep();
         }
      }
   }

