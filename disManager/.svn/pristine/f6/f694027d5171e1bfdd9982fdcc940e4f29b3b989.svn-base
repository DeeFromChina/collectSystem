                  cfgProps.load(inSR);
                  inSR.close();
                  String sendTime = "";
                  String sendStatus = "";
                  String loadTime = "";
                  String loadStatus = "";
                     sendTime = cfgProps.getProperty("catalog.sendTime")==null ? "" : cfgProps.get("catalog.sendTime").toString();
                     sendStatus = sendTime == "" ? "" : "已传送";
